<%- include('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/signup.css" />

<body>
  <!-- Animated Fashion Background -->
  <div class="fashion-background">
    <!-- Gradient Waves -->
    <div class="gradient-wave wave-1"></div>
    <div class="gradient-wave wave-2"></div>
    <div class="gradient-wave wave-3"></div>
    
    <!-- Floating Elements -->
    <div class="floating-element element-1"></div>
    <div class="floating-element element-2"></div>
    <div class="floating-element element-3"></div>
    <div class="floating-element element-4"></div>
    <div class="floating-element element-5"></div>
    
    <!-- Shimmer Effects -->
    <div class="shimmer-line line-1"></div>
    <div class="shimmer-line line-2"></div>
    <div class="shimmer-line line-3"></div>
  </div>

  <!-- Floating Particles -->
  <div class="particles-container">
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
    <div class="particle"></div>
  </div>

  <!-- Main Container -->
  <div class="signup-container">
    <!-- Brand Header -->
    <div class="brand-header">
      <div class="brand-logo">
        <div class="logo-circle">
          <div class="logo-inner">
            <span class="logo-icon">ü™ë</span>
            <span class="transform-symbol">‚Üí</span>
            <span class="logo-icon">üõèÔ∏è</span>
          </div>
        </div>
        <div class="brand-text">
          <h1 class="brand-name">ChairToBed</h1>
          <span class="brand-tagline">Join the Furniture Revolution</span>
        </div>
      </div>
    
      <div class="nav-breadcrumb">
        <a href="/admin" class="nav-link">
          <span class="nav-dot"></span>
          <span>Home</span>
        </a>
        <div class="nav-arrow">‚Üí</div>
        <span class="nav-current">
          <span class="nav-dot active"></span>
          <span>Register</span>
        </span>
      </div>
    </div>

    <!-- Signup Glass Card -->
    <div class="glass-signup-card">
      <div class="card-glow"></div>
      <div class="card-shimmer"></div>
      
      <!-- Card Header -->
      <div class="card-header">
        <div class="header-icon">
          <div class="icon-rings">
            <div class="ring ring-1"></div>
            <div class="ring ring-2"></div>
            <div class="ring ring-3"></div>
          </div>
          <span class="header-emoji">‚ú®</span>
        </div>
        <div class="header-content">
          <h2 class="signup-title">Create Account</h2>
          <p class="signup-subtitle">Start your furniture business journey</p>
        </div>
      </div>

      <!-- Signup Form -->
      <form class="modern-signup-form" onsubmit="return validateSignupForm()" action="/admin/signup" method="POST" enctype="multipart/form-data">
        
        <!-- Business Details Section -->
        <div class="form-section" data-section="1">
          <div class="section-indicator">
            <div class="indicator-line"></div>
            <div class="indicator-dot">1</div>
          </div>
          
          <div class="input-row">
            <div class="glass-input-group">
              <div class="input-label">
                <span class="label-icon">üè¢</span>
                <span class="label-text">Business Name</span>
                <span class="required">*</span>
              </div>
              <div class="glass-input-wrapper">
                <input type="text" name="memberNick" class="glass-input member-nick" 
                       placeholder="Your furniture business name" required />
                <div class="input-glow"></div>
                <div class="input-border"></div>
              </div>
            </div>
            
            <div class="glass-input-group">
              <div class="input-label">
                <span class="label-icon">üì±</span>
                <span class="label-text">Phone Number</span>
                <span class="required">*</span>
              </div>
              <div class="glass-input-wrapper">
                <input type="tel" name="memberPhone" class="glass-input member-phone" 
                       placeholder="+1 (555) 000-0000" required />
                <div class="input-glow"></div>
                <div class="input-border"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Security Section -->
        <div class="form-section" data-section="2">
          <div class="section-indicator">
            <div class="indicator-line"></div>
            <div class="indicator-dot">2</div>
          </div>
          
          <div class="input-row">
            <div class="glass-input-group">
              <div class="input-label">
                <span class="label-icon">üîê</span>
                <span class="label-text">Password</span>
                <span class="required">*</span>
              </div>
              <div class="glass-input-wrapper">
                <input type="password" name="memberPassword" class="glass-input member-password" 
                       placeholder="Create secure password" required />
                <div class="input-glow"></div>
                <div class="input-border"></div>
                <div class="password-strength">
                  <div class="strength-line"></div>
                  <span class="strength-label">Password Strength</span>
                </div>
              </div>
            </div>
            
            <div class="glass-input-group">
              <div class="input-label">
                <span class="label-icon">üîí</span>
                <span class="label-text">Confirm Password</span>
                <span class="required">*</span>
              </div>
              <div class="glass-input-wrapper">
                <input type="password" name="confirmPassword" class="glass-input confirm-password" 
                       placeholder="Repeat your password" required />
                <div class="input-glow"></div>
                <div class="input-border"></div>
                <div class="password-match">
                  <div class="match-indicator">‚óã</div>
                  <span class="match-label">Passwords Match</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Photo Upload Section -->
        <div class="form-section" data-section="3">
          <div class="section-indicator">
            <div class="indicator-line"></div>
            <div class="indicator-dot">3</div>
          </div>
          
          <div class="photo-upload-section">
            <div class="upload-area">
              <div class="photo-preview">
                <div class="preview-frame">
                  <img class="preview-image upload-img-frame" src="/img/sofa-set.jpeg" alt="Business" />
                  <div class="preview-overlay">
                    <div class="overlay-icon">üì∏</div>
                    <div class="overlay-text">Change Photo</div>
                  </div>
                </div>
              </div>
              
              <div class="upload-controls">
                <div class="upload-info">
                  <h3 class="upload-title">Business Photo</h3>
                  <p class="upload-desc">Show your furniture collection</p>
                </div>
                
                <div class="glass-upload-zone" onclick="document.getElementById('input-file').click()">
                  <div class="zone-glow"></div>
                  <div class="zone-content">
                    <div class="upload-icon">üì∑</div>
                    <div class="upload-text">
                      <strong>Upload Photo</strong>
                      <span>Drag & drop or click to browse</span>
                    </div>
                  </div>
                </div>
                
                <input type="file" id="input-file" class="hidden-file-input member-image" 
                       name="memberImage" accept="image/jpeg,image/jpg,image/png" />
                
                <div class="file-info">
                  <input class="file-name upload-name" value="No file selected" readonly />
                  <div class="file-size"></div>
                </div>
                
                <div class="upload-hints">
                  <div class="hint">üìê Best: 1200x800px</div>
                  <div class="hint">üíæ Max: 5MB</div>
                  <div class="hint">‚ú® JPG, PNG formats</div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Hidden Fields -->
        <input name="memberType" value="BUSINESS" hidden />

        <!-- Form Actions -->
        <div class="form-actions">
          <div class="terms-section">
            <p class="terms-text">
              By creating an account, you agree to our 
              <a href="#" class="terms-link">Terms of Service</a> 
              and 
              <a href="#" class="privacy-link">Privacy Policy</a>
            </p>
          </div>
          
          <div class="action-buttons">
            <a href="/admin/login" class="glass-button secondary">
              <span class="btn-glow"></span>
              <span class="btn-icon">üë§</span>
              <span class="btn-text">Have Account?</span>
              <div class="btn-ripple"></div>
            </a>
            
            <button type="submit" class="glass-button primary" name="signup">
              <span class="btn-glow"></span>
              <span class="btn-icon">‚ú®</span>
              <span class="btn-text">Create Account</span>
              <div class="btn-ripple"></div>
        </button>
          </div>
      </div>
    </form>
  </div>

    <!-- Footer Stats -->
    <div class="footer-stats">
      <div class="stat-glass">
        <div class="stat-number">2.5K+</div>
        <div class="stat-label">Businesses</div>
      </div>
      <div class="stat-separator"></div>
      <div class="stat-glass">
        <div class="stat-number">50K+</div>
        <div class="stat-label">Customers</div>
      </div>
      <div class="stat-separator"></div>
      <div class="stat-glass">
        <div class="stat-number">98%</div>
        <div class="stat-label">Success</div>
      </div>
    </div>
  </div>

  <script type="text/javascript" src="/js/signup.js"></script> 
</body>

<%- include('includes/footer') %>
