<%- include('includes/header') %>

<link rel="stylesheet" href="/css/login.css" />

<body>
  <div class="ring">
    <i style="--clr:#00ff0a;"></i>
    <i style="--clr:#ff0057;"></i>
    <i style="--clr:#fffd44;"></i>

    <form class="login" action="/admin/login" method="POST">
      <h2>Login</h2>
      <div class="inputBx">
        <input type="text" name="memberNick" placeholder="Username" required />
      </div>
      <div class="inputBx">
        <input type="password" name="memberPassword" placeholder="Password" required />
      </div>
      <div class="inputBx">
        <input type="submit" value="Sign in" />
      </div>
      <div class="links">
        <a href="#">Forget Password</a>
        <a href="/admin/signup">Signup</a>
      </div>
    </form>
  </div>
</body>

<%- include('includes/footer') %>
