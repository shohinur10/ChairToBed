    </div>
    <div class="planet planet-2">
      <div class="planet-surface"></div>
      <div class="planet-glow"></div>
    </div>
    <div class="planet planet-3">
      <div class="planet-surface"></div>
      <div class="planet-spots"></div>
    </div>
    
    <!-- Cosmic Dust -->
    <div class="cosmic-dust">
      <div class="dust-particle"></div>
      <div class="dust-particle"></div>
      <div class="dust-particle"></div>
      <div class="dust-particle"></div>
      <div class="dust-particle"></div>
