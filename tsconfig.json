{
  "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "paths": {
          "*": ["node_modules/*"]
      }
  },
  "include": ["src/**/*.ts", "src/router.ts"], // Updated include pattern
  "exclude": ["node_modules"]
}